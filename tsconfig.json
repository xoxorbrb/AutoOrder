{
  "compilerOptions": {
    "jsx": "react-jsx",
    "rootDir": "./",
    "module": "CommonJS",
    "target": "ESNext",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist"
  },
  "include": ["src/**/*", "renderer.ts", "preload.ts", "electron.ts"],
  "exclude": ["node_modules", "dist"]
}
