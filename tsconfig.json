{
  "compilerOptions": {
    "jsx": "react-jsx",
    "rootDir": "./",
    "module": "CommonJS",
    "target": "ESNext",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "build"
  },
  "include": ["electron/**/*"],
  "exclude": ["node_modules", "dist"]
}
